{
	"$schema": "https://docs.rome.tools/schemas/12.1.2/schema.json",
	"organizeImports": {
		"enabled": false
	},
	"linter": {
		"enabled": true,
        "ignore": [
			"rollup.config.js"
		],
		"rules": {
			"recommended": true
		}
	},
	"formatter": {
		"enabled": true,
        "ignore": [
			"rollup.config.js"
		],
		"indentStyle": "space"
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "single"
		}
	}
}